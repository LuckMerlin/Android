<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="vm" type="merlin.file.model.AlertMessageModel" />
        <import type="android.view.View"/>
        <import type="luckmerlin.databinding.view.Text"/>
        <import type="luckmerlin.databinding.touch.Click"/>
    </data>

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:background="@drawable/round_corner_gray" android:padding="10dp"
        android:layout_height="wrap_content" android:minWidth="220dp" android:minHeight="60dp">

        <TextView android:text="@{vm.title??``}" android:textColor="@color/textTitle"
            android:paddingBottom="3dp" android:paddingTop="3dp" android:layout_gravity="center"
            android:visibility="@{vm.title.length()>0?View.VISIBLE:View.VISIBLE}"
            android:textSize="@dimen/textTitle" android:singleLine="true" android:gravity="center"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <EditText android:text="@={vm.input}" binding:m="@{Text.text(null).hint(vm.inputHint)}"
            android:visibility="@{vm.inputHint==null?View.GONE:View.VISIBLE}"
            android:background="@drawable/round_corner_gray"
            android:focusableInTouchMode="true" android:focusedByDefault="true" android:inputType="text"
            android:layout_gravity="center" android:textColor="@color/textTitleSub"
            android:layout_width="match_parent" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:textSize="@dimen/textSmall" android:layout_height="wrap_content"/>

        <TextView android:text="@{vm.message??``}" android:textColor="@color/textTitleSub"
            android:visibility="@{vm.message.length()>0?View.VISIBLE:View.GONE}"
            android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_gravity="center"
            android:textSize="@dimen/textSmall" android:gravity="center" android:maxLines="5"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <LinearLayout android:orientation="horizontal" android:layout_gravity="center"
            android:layout_width="wrap_content" android:layout_height="wrap_content">

            <TextView binding:m="@{Text.text(vm.left).add(Click.c(vm.left))}"
                android:visibility="@{null==vm.left?View.GONE:View.VISIBLE}"
                style="@style/buttonStyle"/>

            <TextView binding:m="@{Text.text(vm.center).add(Click.c(vm.center))}"
                android:visibility="@{null==vm.center?View.GONE:View.VISIBLE}"
                style="@style/buttonStyle"/>

            <TextView binding:m="@{Text.text(vm.right).add(Click.c(vm.right))}"
                android:visibility="@{null==vm.right?View.GONE:View.VISIBLE}"
                style="@style/buttonStyle"/>
        </LinearLayout>
    </LinearLayout>
</layout>
