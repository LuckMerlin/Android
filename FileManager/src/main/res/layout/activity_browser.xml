<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="vm" type="merlin.file.model.FileBrowserModel" />
        <variable name="client" type="com.merlin.file.Client" />
        <import type="merlin.file.util.FileSize"/>
        <import type="com.merlin.file.Mode"/>
        <import type="android.view.View"/>
        <import type="com.file.manager.R"/>
        <import type="luckmerlin.databinding.touch.Click"/>
        <import type="luckmerlin.databinding.view.Image"/>
        <import type="android.text.Html"/>
    </data>
    <LinearLayout android:background="@drawable/round_corner_gray" android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent" android:paddingTop="2dp">
        <RelativeLayout android:layout_alignParentTop="true" android:layout_width="match_parent"
            android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_height="@dimen/listItemNormal"
            android:layout_marginTop="15dp">
            <LinearLayout android:layout_alignParentLeft="true" android:orientation="horizontal"
                android:gravity="center_vertical" android:layout_centerVertical="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="@dimen/titleIconSize" android:layout_height="@dimen/titleIconSize" android:layout_marginLeft="5dp"
                    android:imageResource="@{R.drawable.selector_back}"
                    android:layout_marginRight="15dp" binding:m="@{Click.c().id(R.drawable.selector_back)}"/>
                    <LinearLayout android:orientation="vertical"
                        android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content" android:layout_height="wrap_content">

                            <TextView android:text="@{Html.fromHtml(`&lt;sup>`+vm.clientCount)}" android:textSize="7sp"
                                android:visibility="@{vm.clientCount&lt;1?View.GONE:View.VISIBLE}"
                                android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                            <include binding:device="@{vm.currentClient}" layout="@layout/device_text" />

<!--                            <TextView style="@style/titleNormalTextView" android:textStyle="bold"-->
<!--                                android:text="@{` (`+((null==vm.currentMultiChooseCount||(vm.currentMultiChooseCount&lt;0))?``:``+vm.currentMultiChooseCount+`/`)+vm.currentFolder.length+')'}"-->
<!--                                android:visibility="@{(null==vm.currentClient&amp;&amp;vm.currentFolder.length&lt;1)?View.GONE:View.VISIBLE}"-->
<!--                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>-->

                        </LinearLayout>
                        <LinearLayout android:layout_width="wrap_content" android:orientation="horizontal" android:layout_height="wrap_content">
                            <ImageView android:src="@drawable/switch_thumb_activated" android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp" android:layout_width="10dp" android:layout_height="10dp"/>
                            <TextView android:text='@{""+FileSize.formatSizeText(vm.currentFolder.freeSpace)+"/"+FileSize.formatSizeText(vm.currentFolder.totalSpace)}'
                                style="@style/titleSubNormalTextView" android:layout_width="wrap_content"
                                android:visibility="@{null==vm.currentClient?View.GONE:View.VISIBLE}"
                                android:singleLine="true" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal" android:layout_alignParentRight="true"
                android:layout_centerVertical="true" android:layout_width="wrap_content" android:layout_height="wrap_content">

                <include layout="@layout/operate_image"
                    binding:visibility="@{(vm.mode.is(Mode.MODE_MULTI_CHOOSE)||vm.currentFolder.size&lt;0)?View.VISIBLE:View.GONE}"/>
<!--                binding:src="@{(vm.currentMultiChooseCount&lt;vm.currentAdapter.dataCount)?R.drawable.selector_choose_all:R.drawable.selector_choose_none}" />-->

                <include binding:src="@{R.drawable.selector_cancel}" layout="@layout/operate_image"
                    binding:visibility="@{vm.mode.is(Mode.MODE_SELECT,Mode.MODE_DOWNLOAD,Mode.MODE_UPLOAD,Mode.MODE_MULTI_CHOOSE,Mode.MODE_COPY,Mode.MODE_MOVE)?View.VISIBLE:View.GONE}" />

                <include binding:src="@{R.drawable.selector_menu}" layout="@layout/operate_image"
                    binding:visibility="@{vm.mode.is(Mode.MODE_NORMAL,Mode.MODE_DOWNLOAD,Mode.MODE_UPLOAD,Mode.MODE_COPY,Mode.MODE_MOVE)?View.VISIBLE:View.GONE}" />
            </LinearLayout>
        </RelativeLayout>

        <HorizontalScrollView android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_marginLeft="5dp"
            android:visibility="@{null==vm.currentClient?View.GONE:View.VISIBLE}"
            android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:singleLine="true" android:textSize="@dimen/textSmall"
                android:text="@{vm.currentFolder.path??``}" android:layout_height="wrap_content"
                android:visibility="@{vm.currentFolder.path.length()>0?View.VISIBLE:View.INVISIBLE}" />
        </HorizontalScrollView>

        <View android:paddingLeft="5dp" android:paddingRight="5dp" style="@style/horizontalDividerLine"/>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <HorizontalScrollView android:id="@+id/activityFileBrowser_bottomHSV"
                android:visibility="@{vm.mode.is(Mode.MODE_SELECT,Mode.MODE_MOVE,Mode.MODE_COPY,Mode.MODE_UPLOAD,Mode.MODE_DOWNLOAD,Mode.MODE_MULTI_CHOOSE)?View.VISIBLE:View.GONE}"
                android:layout_alignParentBottom="true" android:scrollbars="none" android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true" android:layout_marginRight="5dp" android:paddingTop="5dp"
                android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <include layout="@layout/item_browser_bottom_menu"
                        android:visibility="@{vm.mode.is(Mode.MODE_SELECT)?View.VISIBLE:View.GONE}"
                        binding:menuText="@{R.string.sure}"/>
                    <include layout="@layout/item_browser_bottom_menu"
                        android:visibility="@{vm.mode.is(Mode.MODE_UPLOAD)?View.VISIBLE:View.GONE}"
                        binding:menuText="@{R.string.upload}"/>
                    <include layout="@layout/item_browser_bottom_menu"
                        android:visibility="@{vm.mode.is(Mode.MODE_DOWNLOAD,Mode.MODE_MULTI_CHOOSE)?View.VISIBLE:View.GONE}"
                        binding:menuText="@{R.string.download}"/>
                    <include layout="@layout/item_browser_bottom_menu"
                        android:visibility="@{vm.mode.is(Mode.MODE_MOVE,Mode.MODE_MULTI_CHOOSE)?View.GONE:View.GONE}"
                        binding:menuText="@{R.string.move}"/>
                    <include layout="@layout/item_browser_bottom_menu"
                        android:visibility="@{vm.mode.is(Mode.MODE_COPY,Mode.MODE_MULTI_CHOOSE)?View.GONE:View.GONE}"
                        binding:menuText="@{R.string.copy}"/>
                    <include layout="@layout/item_browser_bottom_menu"
                        android:visibility="@{vm.mode.is(Mode.MODE_MULTI_CHOOSE)?View.VISIBLE:View.GONE}"
                        binding:menuText="@{R.string.delete}"/>
                </LinearLayout>
            </HorizontalScrollView>
            <merlin.file.view.SwipeRefreshLayout android:paddingLeft="5dp" android:paddingRight="5dp"
                android:layout_above="@id/activityFileBrowser_bottomHSV"
                android:layout_width="match_parent" android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                    android:adapter="@{vm.contentAdapter}" android:layout_height="match_parent"/>
            </merlin.file.view.SwipeRefreshLayout>
        </RelativeLayout>
        </LinearLayout>
</layout>
