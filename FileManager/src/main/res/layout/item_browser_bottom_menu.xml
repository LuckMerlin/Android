<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="menuText" type="int" />
        <import type="luckmerlin.databinding.touch.Click"/>
        <import type="luckmerlin.databinding.view.Text"/>
    </data>
    <TextView android:background="@drawable/selector_round_dark_corner_small"
        binding:m="@{Click.c(menuText).add(Text.text(menuText))}"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:gravity="center" android:minWidth="83dp"
        android:minHeight="40dp" android:padding="5dp"
        android:layout_marginLeft="2dp" android:layout_marginRight="2dp"
        android:textSize="@dimen/textTitle" android:textColor="@color/textTitle"
        android:textStyle="bold"/>
</layout>